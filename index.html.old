<!DOCTYPE html>
<html lang="th">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <title>Love Tarot - จับไพ่ทาโรต์ความรัก</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            -webkit-tap-highlight-color: transparent;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #FFE5EC 0%, #FFF0F5 50%, #FFF5E1 100%);
            min-height: 100vh;
            overflow-x: hidden;
            position: relative;
            color: #8B4789;
        }

        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image:
                radial-gradient(circle at 20% 30%, rgba(255, 182, 193, 0.15) 0%, transparent 50%),
                radial-gradient(circle at 80% 70%, rgba(255, 215, 0, 0.1) 0%, transparent 50%);
            pointer-events: none;
            z-index: 0;
        }

        .container {
            position: relative;
            z-index: 1;
            width: 100%;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .header {
            text-align: center;
            padding: 30px 20px 20px;
            background: linear-gradient(180deg, rgba(255, 255, 255, 0.8) 0%, transparent 100%);
        }

        .header h1 {
            font-size: 32px;
            background: linear-gradient(135deg, #FF69B4 0%, #FFD700 50%, #FF1493 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            font-weight: bold;
            margin-bottom: 10px;
            text-shadow: 2px 2px 4px rgba(255, 182, 193, 0.3);
        }

        .header p {
            font-size: 16px;
            color: #C75B9B;
            font-weight: 500;
        }

        .carousel-container {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px 0;
            position: relative;
            overflow: hidden;
            touch-action: pan-y;
        }

        .carousel {
            display: flex;
            gap: 20px;
            transition: transform 0.3s ease-out;
            cursor: grab;
            padding: 20px 0;
        }

        .carousel.grabbing {
            cursor: grabbing;
            transition: none;
        }

        .carousel.momentum {
            transition: transform 1.2s cubic-bezier(0.25, 0.46, 0.45, 0.94);
        }

        .card {
            flex-shrink: 0;
            width: 180px;
            height: 300px;
            position: relative;
            cursor: pointer;
            transition: transform 0.3s ease;
        }

        .card:hover {
            transform: translateY(-10px) scale(1.05);
        }

        .card-inner {
            width: 100%;
            height: 100%;
            position: relative;
            transform-style: preserve-3d;
            border-radius: 15px;
            box-shadow:
                0 10px 30px rgba(255, 105, 180, 0.3),
                0 0 20px rgba(255, 215, 0, 0.2),
                inset 0 0 20px rgba(255, 255, 255, 0.5);
        }

        .card-back {
            position: absolute;
            width: 100%;
            height: 100%;
            backface-visibility: hidden;
            border-radius: 15px;
            background: linear-gradient(135deg, #FFB6C1 0%, #FF69B4 50%, #FFB6C1 100%);
            border: 3px solid #FFD700;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
        }

        .card-back::before {
            content: '♥';
            font-size: 80px;
            color: rgba(255, 215, 0, 0.5);
            position: absolute;
        }

        .card-back::after {
            content: '';
            position: absolute;
            width: 100%;
            height: 100%;
            background-image:
                repeating-linear-gradient(45deg, transparent, transparent 10px, rgba(255, 255, 255, 0.1) 10px, rgba(255, 255, 255, 0.1) 20px);
        }

        .card-pattern {
            position: absolute;
            width: 100%;
            height: 100%;
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            grid-template-rows: repeat(4, 1fr);
            padding: 20px;
        }

        .card-pattern span {
            display: flex;
            align-items: center;
            justify-content: center;
            color: rgba(255, 215, 0, 0.7);
            font-size: 24px;
        }

        .instruction {
            text-align: center;
            padding: 20px;
            font-size: 16px;
            color: #C75B9B;
            font-weight: 500;
        }

        .selected-card-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.85);
            display: none;
            align-items: center;
            justify-content: center;
            z-index: 1000;
            animation: fadeIn 0.3s ease;
            padding: 20px;
        }

        .selected-card-overlay.active {
            display: flex;
        }

        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }

        .selected-card-content {
            max-width: 400px;
            width: 100%;
        }

        @keyframes cardReveal {
            0% {
                transform: translateY(50px);
                opacity: 0;
            }
            100% {
                transform: translateY(0);
                opacity: 1;
            }
        }

        .card-flip-wrapper {
            width: 100%;
            max-width: 300px;
            height: 500px;
            margin: 0 auto;
            perspective: 1500px;
            position: relative;
        }

        .card-flip-inner {
            width: 100%;
            height: 100%;
            position: relative;
            transform-style: preserve-3d;
            transition: transform 1s ease-in-out;
        }

        .card-flip-inner.flipped {
            transform: rotateY(180deg);
        }

        .card-flip-inner.zoomed {
            animation: cardZoomIn 0.6s ease-out forwards;
        }

        @keyframes cardZoomIn {
            0% {
                transform: rotateY(180deg) scale(1);
            }
            100% {
                transform: rotateY(180deg) scale(1.1) translateY(-30px);
            }
        }

        .card-flip-back,
        .card-flip-front {
            position: absolute;
            width: 100%;
            height: 100%;
            backface-visibility: hidden;
            border-radius: 15px;
            border: 4px solid #FFD700;
            box-shadow:
                0 20px 60px rgba(255, 105, 180, 0.5),
                0 0 40px rgba(255, 215, 0, 0.4);
        }

        .card-flip-back {
            background: linear-gradient(135deg, #FFB6C1 0%, #FF69B4 50%, #FFB6C1 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
        }

        .card-flip-back::before {
            content: '♥';
            font-size: 120px;
            color: rgba(255, 215, 0, 0.5);
            position: absolute;
        }

        .card-flip-back::after {
            content: '';
            position: absolute;
            width: 100%;
            height: 100%;
            background-image:
                repeating-linear-gradient(45deg, transparent, transparent 10px, rgba(255, 255, 255, 0.1) 10px, rgba(255, 255, 255, 0.1) 20px);
        }

        .card-flip-front {
            transform: rotateY(180deg);
            background: white;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .selected-card-image {
            width: 100%;
            height: 100%;
            object-fit: contain;
            border-radius: 12px;
        }

        .selected-card-info {
            background: linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(255, 240, 245, 0.95) 100%);
            border-radius: 20px;
            padding: 25px;
            margin-top: 20px;
            border: 3px solid #FFD700;
            box-shadow:
                0 10px 40px rgba(255, 105, 180, 0.3),
                inset 0 0 30px rgba(255, 215, 0, 0.1);
            opacity: 0;
            transform: translateY(20px);
            transition: opacity 0.5s ease, transform 0.5s ease;
        }

        .selected-card-info.visible {
            opacity: 1;
            transform: translateY(0);
        }

        .selected-card-name {
            font-size: 24px;
            font-weight: bold;
            text-align: center;
            background: linear-gradient(135deg, #FF69B4 0%, #FFD700 50%, #FF1493 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 15px;
        }

        .selected-card-reading {
            font-size: 15px;
            line-height: 1.8;
            color: #6B4668;
            text-align: left;
            max-height: 200px;
            overflow-y: auto;
            padding-right: 10px;
        }

        .selected-card-reading::-webkit-scrollbar {
            width: 6px;
        }

        .selected-card-reading::-webkit-scrollbar-track {
            background: rgba(255, 182, 193, 0.2);
            border-radius: 3px;
        }

        .selected-card-reading::-webkit-scrollbar-thumb {
            background: linear-gradient(135deg, #FF69B4, #FFD700);
            border-radius: 3px;
        }

        .close-button {
            display: block;
            margin: 20px auto 0;
            padding: 12px 40px;
            background: linear-gradient(135deg, #FF69B4 0%, #FFD700 100%);
            color: white;
            border: none;
            border-radius: 25px;
            font-size: 16px;
            font-weight: bold;
            cursor: pointer;
            box-shadow: 0 5px 15px rgba(255, 105, 180, 0.4);
            transition: transform 0.2s, box-shadow 0.2s;
        }

        .close-button:active {
            transform: scale(0.95);
            box-shadow: 0 3px 10px rgba(255, 105, 180, 0.3);
        }

        @media (max-width: 768px) {
            .header h1 {
                font-size: 28px;
            }

            .card {
                width: 150px;
                height: 250px;
            }

            .card-flip-wrapper {
                max-width: 250px;
                height: 420px;
            }

            .selected-card-info {
                padding: 20px;
            }

            .selected-card-name {
                font-size: 20px;
            }

            .selected-card-reading {
                font-size: 14px;
                max-height: 180px;
            }
        }

        @media (max-width: 480px) {
            .header h1 {
                font-size: 24px;
            }

            .header p {
                font-size: 14px;
            }

            .card {
                width: 130px;
                height: 220px;
            }

            .card-flip-wrapper {
                max-width: 220px;
                height: 370px;
            }

            .instruction {
                font-size: 14px;
            }

            .selected-card-info {
                padding: 15px;
            }

            .selected-card-name {
                font-size: 18px;
            }

            .selected-card-reading {
                font-size: 13px;
                max-height: 150px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>♥ Love Tarot ♥</h1>
            <p>จับไพ่ทาโรต์ความรัก</p>
        </div>

        <div class="carousel-container">
            <div class="carousel" id="carousel">
                <!-- Cards will be generated here -->
            </div>
        </div>

        <div class="instruction">
            ปัดซ้าย-ขวาเพื่อเลือกไพ่ แล้วแตะที่ไพ่เพื่อเปิดดู ♥
        </div>
    </div>

    <div class="selected-card-overlay" id="selectedCardOverlay">
        <div class="selected-card-content">
            <div class="card-flip-wrapper">
                <div class="card-flip-inner" id="cardFlipInner">
                    <div class="card-flip-back">
                        <div class="card-pattern">
                            <span>♥</span><span>♦</span><span>♥</span>
                            <span>♦</span><span>♥</span><span>♦</span>
                            <span>♥</span><span>♦</span><span>♥</span>
                            <span>♦</span><span>♥</span><span>♦</span>
                        </div>
                    </div>
                    <div class="card-flip-front">
                        <img class="selected-card-image" id="selectedCardImage" src="" alt="Selected Tarot Card">
                    </div>
                </div>
            </div>
            <div class="selected-card-info">
                <div class="selected-card-name" id="selectedCardName"></div>
                <div class="selected-card-reading" id="selectedCardReading"></div>
            </div>
            <button class="close-button" onclick="closeSelectedCard()">ปิด</button>
        </div>
    </div>

    <script>
        let tarotCards = [];
        let currentOffset = 0;
        let isDragging = false;
        let startX = 0;
        let currentX = 0;
        let velocity = 0;
        let lastX = 0;
        let lastTime = 0;
        let autoScrollInterval = null;
        const carousel = document.getElementById('carousel');

        // Load tarot cards data
        async function loadTarotCards() {
            try {
                const response = await fetch('tarot_cards.json');
                const data = await response.json();
                tarotCards = data.tarot_cards;

                // Shuffle cards
                shuffleArray(tarotCards);

                // Generate carousel cards
                generateCarousel();

                // Start auto-scroll
                startAutoScroll();
            } catch (error) {
                console.error('Error loading tarot cards:', error);
            }
        }

        function shuffleArray(array) {
            for (let i = array.length - 1; i > 0; i--) {
                const j = Math.floor(Math.random() * (i + 1));
                [array[i], array[j]] = [array[j], array[i]];
            }
        }

        function getCardWidth() {
            // Get actual card width from DOM (including gap)
            const cardElement = carousel.querySelector('.card');
            if (cardElement) {
                const computedStyle = window.getComputedStyle(cardElement);
                const width = cardElement.offsetWidth;
                const marginRight = parseFloat(computedStyle.marginRight) || 0;
                const gap = 20; // gap from CSS
                return width + gap;
            }
            return 200; // fallback
        }

        function generateCarousel() {
            carousel.innerHTML = '';

            // Triple the cards for infinite loop effect
            const tripleCards = [...tarotCards, ...tarotCards, ...tarotCards];

            tripleCards.forEach((card, index) => {
                const cardElement = document.createElement('div');
                cardElement.className = 'card';
                cardElement.innerHTML = `
                    <div class="card-inner">
                        <div class="card-back">
                            <div class="card-pattern">
                                <span>♥</span><span>♦</span><span>♥</span>
                                <span>♦</span><span>♥</span><span>♦</span>
                                <span>♥</span><span>♦</span><span>♥</span>
                                <span>♦</span><span>♥</span><span>♦</span>
                            </div>
                        </div>
                    </div>
                `;

                cardElement.addEventListener('click', () => selectCard(card));
                carousel.appendChild(cardElement);
            });

            // Wait for DOM to render, then set initial position
            setTimeout(() => {
                const cardWidth = getCardWidth();
                currentOffset = -(tarotCards.length * cardWidth);
                updateCarouselPosition();
            }, 0);
        }

        function updateCarouselPosition() {
            carousel.style.transform = `translateX(${currentOffset}px)`;
        }

        function startAutoScroll() {
            stopAutoScroll();
            autoScrollInterval = setInterval(() => {
                if (!isDragging) {
                    currentOffset -= 0.5; // Slow auto-scroll speed
                    checkInfiniteLoop();
                    updateCarouselPosition();
                }
            }, 16); // ~60fps
        }

        function stopAutoScroll() {
            if (autoScrollInterval) {
                clearInterval(autoScrollInterval);
                autoScrollInterval = null;
            }
        }

        function checkInfiniteLoop() {
            const cardWidth = getCardWidth();
            const singleSetWidth = tarotCards.length * cardWidth;

            // Calculate boundaries for seamless loop
            // We have 3 sets: [Set 1][Set 2][Set 3]
            // Initial position is at Set 2 start: -singleSetWidth
            const minOffset = -singleSetWidth * 1.5;  // เมื่อเลื่อนขวาถึงกลางชุดที่ 2
            const maxOffset = -singleSetWidth * 0.5;  // เมื่อเลื่อนซ้ายถึงกลางชุดที่ 2

            // เลื่อนไปทางซ้ายมากเกินไป (offset เป็น negative มาก)
            if (currentOffset < minOffset) {
                // Jump to equivalent position in the previous set
                const wasTransitioning = carousel.classList.contains('momentum');
                carousel.classList.remove('momentum', 'grabbing');
                carousel.style.transition = 'none';
                currentOffset += singleSetWidth;
                carousel.style.transform = `translateX(${currentOffset}px)`;

                // Force reflow
                void carousel.offsetWidth;

                // Restore transition
                requestAnimationFrame(() => {
                    carousel.style.transition = 'transform 0.3s ease-out';
                    if (wasTransitioning) {
                        carousel.classList.add('momentum');
                    }
                });
            }
            // เลื่อนไปทางขวามากเกินไป (offset ใกล้ 0 หรือ positive)
            else if (currentOffset > maxOffset) {
                // Jump to equivalent position in the next set
                const wasTransitioning = carousel.classList.contains('momentum');
                carousel.classList.remove('momentum', 'grabbing');
                carousel.style.transition = 'none';
                currentOffset -= singleSetWidth;
                carousel.style.transform = `translateX(${currentOffset}px)`;

                // Force reflow
                void carousel.offsetWidth;

                // Restore transition
                requestAnimationFrame(() => {
                    carousel.style.transition = 'transform 0.3s ease-out';
                    if (wasTransitioning) {
                        carousel.classList.add('momentum');
                    }
                });
            }
        }

        // Touch and mouse events
        function handleStart(e) {
            isDragging = true;
            stopAutoScroll();
            carousel.classList.add('grabbing');
            carousel.classList.remove('momentum');

            const clientX = e.touches ? e.touches[0].clientX : e.clientX;
            startX = clientX;
            currentX = clientX;
            lastX = clientX;
            lastTime = Date.now();
            velocity = 0;
        }

        function handleMove(e) {
            if (!isDragging) return;

            e.preventDefault();
            const clientX = e.touches ? e.touches[0].clientX : e.clientX;
            const deltaX = clientX - currentX;
            currentX = clientX;

            currentOffset += deltaX;

            // Calculate velocity
            const now = Date.now();
            const timeDelta = now - lastTime;
            if (timeDelta > 0) {
                velocity = (clientX - lastX) / timeDelta * 16; // Normalize to 60fps
            }
            lastX = clientX;
            lastTime = now;

            checkInfiniteLoop();
            updateCarouselPosition();
        }

        function handleEnd(e) {
            if (!isDragging) return;

            isDragging = false;
            carousel.classList.remove('grabbing');

            // Apply momentum
            if (Math.abs(velocity) > 1) {
                carousel.classList.add('momentum');
                const momentumDistance = velocity * 20; // Adjust momentum strength
                currentOffset += momentumDistance;
                checkInfiniteLoop();
                updateCarouselPosition();

                setTimeout(() => {
                    carousel.classList.remove('momentum');
                }, 1200);
            }

            // Restart auto-scroll after delay
            setTimeout(() => {
                if (!isDragging) {
                    startAutoScroll();
                }
            }, 2000);
        }

        // Add event listeners
        carousel.addEventListener('mousedown', handleStart);
        carousel.addEventListener('mousemove', handleMove);
        carousel.addEventListener('mouseup', handleEnd);
        carousel.addEventListener('mouseleave', handleEnd);

        carousel.addEventListener('touchstart', handleStart, { passive: false });
        carousel.addEventListener('touchmove', handleMove, { passive: false });
        carousel.addEventListener('touchend', handleEnd);

        function selectCard(card) {
            stopAutoScroll();

            const imageName = card.card_name + '.png';
            const imagePath = `images/tarot/${imageName}`;
            const cardFlipInner = document.getElementById('cardFlipInner');
            const cardInfo = document.querySelector('.selected-card-info');

            // Reset card flip state
            cardFlipInner.classList.remove('flipped', 'zoomed');
            cardInfo.classList.remove('visible');

            // Set card content
            document.getElementById('selectedCardImage').src = imagePath;
            document.getElementById('selectedCardName').textContent = card.card_name;
            document.getElementById('selectedCardReading').textContent = card.readings.love || 'ไม่มีคำทำนาย';

            // Show overlay
            document.getElementById('selectedCardOverlay').classList.add('active');

            // Start flip animation after short delay
            setTimeout(() => {
                cardFlipInner.classList.add('flipped');

                // Start zoom animation and show info after flip completes
                setTimeout(() => {
                    cardFlipInner.classList.add('zoomed');
                    cardInfo.classList.add('visible');
                }, 1000); // Wait for flip to complete
            }, 200); // Short delay before flip starts
        }

        function closeSelectedCard() {
            const cardFlipInner = document.getElementById('cardFlipInner');
            const cardInfo = document.querySelector('.selected-card-info');

            // Reset card flip state
            cardFlipInner.classList.remove('flipped', 'zoomed');
            cardInfo.classList.remove('visible');

            document.getElementById('selectedCardOverlay').classList.remove('active');
            startAutoScroll();
        }

        // Close overlay when clicking outside
        document.getElementById('selectedCardOverlay').addEventListener('click', (e) => {
            if (e.target.id === 'selectedCardOverlay') {
                closeSelectedCard();
            }
        });

        // Initialize
        loadTarotCards();
    </script>
</body>
</html>
